Proceso sin_titulo
	//Elabore un algoritmo que solicite un número entero y diferente a cero (validado), e 
	//indique si es par
	Definir n Como Entero;
	Escribir 'Ingrese n: ';
	Repetir
		Leer n;
		Si n == 0 Entonces
			Escribir 'n debe ser diferente a 0';
		FinSi
	Hasta Que n<>0
	Si n%2==0 Entonces
		Escribir n, ' es par';
	SiNo
		Escribir n, ' no es par';
	FinSi
FinProceso
